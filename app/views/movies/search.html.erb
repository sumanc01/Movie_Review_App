<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
        <center><b><%= movie.title %></b></center>
      </div>
    </div>
  <% end %>
</div>
